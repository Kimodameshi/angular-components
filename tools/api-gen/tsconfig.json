{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "module": "ES2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": false,
        "composite": true,
        "lib": ["ES2021.String"],
        "outDir": "./dist",
        "types": [
            "node",
            "jasmine"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}
