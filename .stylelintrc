{
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "indentation": [4, {
            "message": "4 spaces must use! :P"
        }],
        "max-empty-lines": 3,
        "max-line-length": 120,
        "no-duplicate-selectors": true,
        "no-descending-specificity": true,
        "rule-empty-line-before": ["always", {
            "ignore": ["after-comment", "first-nested"]
        }],
        "selector-type-case": "lower",
        "max-nesting-depth": 4,
        "number-leading-zero": ["always", {
            "message": "zero before dot"
        }]
    },
    "ignoreFiles": [
        "packages/docs/src/styles/koobiq/default-theme/*.*",
        "packages/docs/src/styles/koobiq/green-theme/*.*",
        "packages/docs/src/styles/koobiq/red-theme/*.*",
        "packages/docs/src/styles/koobiq/yellow-theme/*.*",

        "packages/angular-moment-adapter/coverage/**/*.css",
        "packages/angular-luxon-adapter/coverage/**/*.css",
        "packages/components/coverage/**/*.css",
        "packages/cdk/coverage/**/*.css"
    ]
}
